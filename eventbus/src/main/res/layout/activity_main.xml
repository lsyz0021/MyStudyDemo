<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_send_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="发布消息"/>

    <Button
        android:id="@+id/btn_send_othermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="发布other消息"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_send_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="MainActivity注册EventBus"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_send_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="打开SecondActivity"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/tv_main_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainActivity…………等待接收消息"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_main_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainActivity…………等待接收消息"
        android:textSize="15sp"/>

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
