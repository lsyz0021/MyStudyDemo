<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_second_send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="发送消息"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_second_send_otherMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="发送other消息"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_second_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="SecondActiviy注册EventBus"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_secondActivity_message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SecondActiviy…………等待接收消息"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_secondActivity_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SecondActiviy…………等待接收消息"
        android:textSize="15sp"/>

    <FrameLayout
        android:id="@+id/fl_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>