<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_share_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_she"
        android:background="@color/wechatshare_white"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="分享"
        android:textColor="@color/wechatshare_black"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/ll_she"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/wechatshare_white"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shareweixin"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_share_weixin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:text="微信"
                android:textColor="@color/wechatshare_black"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sharefriendquan"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_share_weixinquan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:text="朋友圈"
                android:textColor="@color/wechatshare_black"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sharesms"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_share_sms"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:text="短信"
                android:textColor="@color/wechatshare_black"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>